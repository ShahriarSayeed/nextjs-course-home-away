FROM node:22-alpine AS builder

# Install build tools required for native modules and prisma generation
RUN apk add --no-cache --virtual .build-deps \
  build-base \
  python3 \
  git

WORKDIR /app

# Copy package manifests and npm config (if present)
COPY package*.json ./
COPY .npmrc ./

# Install dependencies (including dev deps so next build works)
RUN npm ci

# Copy source
COPY . .

# Generate Prisma client for Alpine (musl + OpenSSL 3.0)
# This produces a prisma client with binary target linux-musl-openssl-3.0.x
RUN npx prisma generate --schema=./prisma/schema.prisma --binary-targets=linux-musl-openssl-3.0.x

# Build Next.js app (the build step also runs a prisma generate per package.json build script,
# we already generated the correct binary above but keep build for app compilation)
RUN npm run build

# Final image: slim runtime with required runtime libs
FROM node:22-alpine AS runner

# Install runtime libs required by Prisma on Alpine
RUN apk add --no-cache libc6-compat openssl3

WORKDIR /app

ENV NODE_ENV=development

# Copy only what is necessary
COPY --from=builder /app/package*.json ./ 
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/prisma ./prisma

EXPOSE 3000

# Use a non-root user (optional)
RUN addgroup -S appgroup && adduser -S appuser -G appgroup
USER appuser

CMD ["npm", "start"]